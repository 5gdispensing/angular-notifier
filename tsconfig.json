{
	"compilerOptions": {
		"declaration": true,
		"emitDecoratorMetadata": true,
		"newLine": "CRLF",
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"removeComments": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "ES5"
	},
	"exclude": [
		"node_modules"
	]
}
